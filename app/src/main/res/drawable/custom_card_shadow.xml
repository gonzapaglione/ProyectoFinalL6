<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item
        android:left="2dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#1F000000" /> <!-- Color de la sombra (negro con baja opacidad) -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Fondo de la tarjeta -->
    <item
        android:bottom="4dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
