<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="28 de Noviembre, 2025 | 05:30 PM"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chipEstado" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/chipEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/status_cancelled_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                tools:text="Cancelado"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/status_cancelled_text" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvOdontologo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Odontólogo: Dr. Lopez"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFecha" />

        <TextView
            android:id="@+id/tvCobertura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cobertura: Particular"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOdontologo" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#E5E7EB"
            app:layout_constraintTop_toBottomOf="@id/tvCobertura" />

        <TextView
            android:id="@+id/tvMotivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="13sp"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toBottomOf="@id/divider"
            tools:text="Motivo consulta: Dolor dental - de muela" />

        <TextView
            android:id="@+id/tvCancelacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvMotivo"
            tools:text="Motivo cancelación: Me sentía mal" />

        <TextView
            android:id="@+id/tvResena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvCancelacion"
            tools:text="Muy buena atención" />

        <TextView
            android:id="@+id/tvTratamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tvResena"
            tools:text="Tratamiento: Evolución" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelar"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            app:backgroundTint="@color/button_danger_red"
            android:text="Cancelar Turno"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTratamiento" />

        <TextView
            android:id="@+id/tvCancelacionInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnCancelar"
            app:layout_constraintTop_toTopOf="@id/btnCancelar"
            app:layout_constraintBottom_toBottomOf="@id/btnCancelar"
            tools:text="Los turnos solo se pueden cancelar hasta 3 horas antes.\nEste turno ya no entra en el horario de cancelación." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ver Detalle"
            android:visibility="gone"
            android:textColor="@color/white"
            app:backgroundTint="@color/main_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTratamiento" />

        <TextView
            android:id="@+id/tvValoracionMensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDetalle"
            app:layout_constraintTop_toBottomOf="@id/tvTratamiento"
            tools:text="Ayudanos valorando el turno" />

        <TextView
            android:id="@+id/tvValoracionCta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDetalle"
            app:layout_constraintTop_toBottomOf="@id/tvTratamiento"
            android:text="@string/nos_ayudas"
            tools:text="¿Nos ayudas con tu reseña?" />

        <TextView
            android:id="@+id/tvValoracionLink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="12dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/main_blue"
            android:visibility="gone"
            android:text="@string/click_aqui"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDetalle"
            app:layout_constraintTop_toBottomOf="@id/tvValoracionCta"
            tools:text="Haz clic aquí" />

        <RatingBar
            android:id="@+id/rbValoracion"
            style="?attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/tvValoracionMensaje"
            app:layout_constraintTop_toBottomOf="@id/tvValoracionMensaje"
            tools:rating="4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>