<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola, Usuario"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido de nuevo"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting" />

    <LinearLayout
        android:id="@+id/topCardsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:text="Mis turnos de hoy"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvTurnosHoyCount"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!-- Estado: 0 turnos hoy -> mostramos CTA para reservar -->
                <LinearLayout
                    android:id="@+id/layoutTurnosHoyEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No tenés turnos para hoy"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="¿Querés reservar uno?"
                        android:textColor="@color/text_secondary" />

                    <Button
                        android:id="@+id/btnReservarTurno"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="12dp"
                        android:text="Ir a reserva de turno"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/main_blue"
                        app:cornerRadius="8dp" />
                </LinearLayout>

                <!-- Estado: 1+ turnos hoy -> mostramos lista -->
                <LinearLayout
                    android:id="@+id/layoutTurnosHoyList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:visibility="gone" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTurnosPorEstado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/topCardsContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTotalTurnos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi total de turnos: 0"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProgramadosLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programados: 0"
                    android:textColor="@color/status_programmed_text" />

                <ProgressBar
                    android:id="@+id/pbProgramados"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="0"
                    android:max="1"
                    android:progressTint="@color/status_programmed_text"
                    android:progressBackgroundTint="@color/status_programmed_bg" />

                <TextView
                    android:id="@+id/tvRealizadosLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Realizados: 0"
                    android:textColor="@color/status_realized_text" />

                <ProgressBar
                    android:id="@+id/pbRealizados"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="0"
                    android:max="1"
                    android:progressTint="@color/status_realized_text"
                    android:progressBackgroundTint="@color/status_realized_bg" />

                <TextView
                    android:id="@+id/tvAusentesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Ausentes: 0"
                    android:textColor="@color/status_absent_text" />

                <ProgressBar
                    android:id="@+id/pbAusentes"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="0"
                    android:max="1"
                    android:progressTint="@color/status_absent_text"
                    android:progressBackgroundTint="@color/status_absent_bg" />

                <TextView
                    android:id="@+id/tvCanceladosLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Cancelados: 0"
                    android:textColor="@color/status_cancelled_text" />

                <ProgressBar
                    android:id="@+id/pbCancelados"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="0"
                    android:max="1"
                    android:progressTint="@color/status_cancelled_text"
                    android:progressBackgroundTint="@color/status_cancelled_bg" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>